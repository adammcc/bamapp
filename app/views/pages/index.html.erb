<!-- Contact-->
<section class="contact-section bg-black" id="contact">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5">
      <div class="col-md-4 mb-3 mb-md-0">
        <div class="card py-4 h-100">
          <div class="card-body text-center">
            <i class="fas fa-map-marked-alt bam-fa-icons mb-2"></i>
            <h4 class="text-uppercase m-0">Address</h4>
            <hr class="my-4 mx-auto" />
            <div class="small text-black-50">Nyack, NY</div> <br>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3 mb-md-0">
        <div class="card py-4 h-100">
          <div class="card-body text-center">
            <i class="fas fa-envelope bam-fa-icons mb-2"></i>
            <h4 class="text-uppercase m-0">Email</h4>
            <hr class="my-4 mx-auto" />
            <div class="small text-black-50"><a href="#!">hello@fieldapp.com</a></div>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3 mb-md-0">
        <div class="card py-4 h-100">
          <div class="card-body text-center">
            <i class="fas fa-mobile-alt bam-fa-icons mb-2"></i>
            <h4 class="text-uppercase m-0">Phone</h4>
            <hr class="my-4 mx-auto" />
            <div class="small text-black-50">+1 (555) 555-5555</div>
          </div>
        </div>
      </div>
    </div>
    <div class="social d-flex justify-content-center">
      <a class="mx-2" href="#!"><i class="fab fa-twitter"></i></a>
      <a class="mx-2" href="#!"><i class="fab fa-facebook-f"></i></a>
      <a class="mx-2" href="https://www.instagram.com/go.bamproductions/" target="_blank"><i class="fab fa-instagram"></i></a>
    </div>
  </div>
</section>
