<!-- Navigation-->
<%= render '/shared/dynamic_navbar' %>

<!-- Masthead-->
<% main_image_path = SiteConfig.first.reload.main_image_path %>
<header class="masthead" style='background-image: url("<%= main_image_path %>")'>
  <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
    <div class="d-flex justify-content-center">
      <div class="text-center">
        <% color = main_image_path.blank? ? '#000' : '#fff' %>
        <h1 class="mx-auto main-text" style="color:<%= color %>">FieldApp</h1>
        <%#= link_to locations_path, class: "btn btn-primary"  do %>
          <!-- Browse <i class="fas fa-search"></i> -->
        <%# end %>
      </div>
    </div>
  </div>
</header>
<!-- About-->
<section class="about-section text-center" id="about">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-lg-8">
        <h2 class="mb-4">About FieldApp</h2>
        <p class="text-black-50">
           FieldApp is a multi-media production company, intent on delivering the creative vision of our clients on time, and on budget . With years of experience, and partners around the globe, we are capable of creating what you need, where you need it.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Projects-->
<section class="projects-section bg-light" id="projects">
  <h2 class="text-center">Featured Locations</h2>
  <p class="mb-5 text-center">
    <%= link_to "See all", locations_path, class: "bam-link" %>
  </p>

  <div class="container px-4 px-lg-5">
    <!-- Featured Project Row-->
    <div class="row gx-0 mb-4 mb-lg-5 align-items-center">
      <div class="col-xl-8 col-lg-7">
        <%#= image_tag("https://field-app-assets.s3.amazonaws.com/interior_shot_1.jpg", class: "img-fluid mb-3 mb-lg-0") %>
        <img class="img-fluid mb-3 mb-lg-0" src="https://field-app-assets.s3.amazonaws.com/interior_shot_1.jpg" alt="..." />
      </div>
      <div class="col-xl-4 col-lg-5">
        <div class="featured-text text-center text-lg-left">
          <h4>Present perfect location</h4>
          <p class="text-black-50 mb-0">An example of where you can add a featured location image of a project, or anything else, along with a description.</p>
        </div>
      </div>
    </div>
      <!-- Project One Row-->
      <div class="row gx-0 mb-5 mb-lg-0 justify-content-center">
        <div class="col-lg-6">
          <%#= image_tag("collov-home-design-4_jQL4JCS98-unsplash.jpg", class: "img-fluid") %>
          <img class="img-fluid" src="https://field-app-assets.s3.amazonaws.com/scandi-house.jpg" alt="..." />
        </div>
        <div class="col-lg-6">
          <div class="bg-black text-center h-100 project">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-center text-lg-left">
                <h4 class="text-white">Exterior Shot</h4>
                <p class="mb-0 text-white-50">An example of where you can put an image of a project, or anything else, along with a description.</p>
                <hr class="d-none d-lg-block mb-0 ms-0" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Project Two Row-->
      <div class="row gx-0 justify-content-center">
        <div class="col-lg-6">
          <%#= image_tag("pixasquare-4ojhpgKpS68-unsplash.jpg", class: "img-fluid") %>
          <img class="img-fluid" src="https://field-app-assets.s3.amazonaws.com/office_shot.jpg" alt="..." />
        </div>
        <div class="col-lg-6 order-lg-first">
          <div class="bg-black text-center h-100 project">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-center text-lg-right">
                <h4 class="text-white">Interior Shot</h4>
                <p class="mb-0 text-white-50">Another example of a project with its respective description. These sections work well responsively as well, try this theme on a small screen!</p>
                <hr class="d-none d-lg-block mb-0 me-0" />
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</section>

